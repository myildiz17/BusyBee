<br>
<% if flash[:errors] %>
    <% flash[:errors].each do |err| %>
        <p style="color: red"><%= err %></p>
    <% end %>
<% end %>

<%= form_for @job do |f| %>
    <%= f.label :category %>
    <%= f.text_field :category %>
    <br>
    <br>
    <%= f.label :total_time %>
    <%= f.text_field :total_time %>
    <br>
    <br>
    <%= f.label :date %>
    <%= f.text_field :date %>
    <br>
    <br>
    <%= f.label :time %>
    <%= f.text_field :time %>
    <br>
    <br>
    <%= f.label :neighbor_id %>
    <%= f.collection_select :neighbor_id, @neighbors, :id, :name %>
    <br>
    <br>
    <%= f.label :worker_bee_id %>
    <%= f.collection_select :worker_bee_id, @worker_bees, :id, :name %>
    <br>
    <br>
    <%= f.submit %>
    
<% end %>