<h1>Login</h1>

<% @page_title = "NeighborAuth | Login" %>
<div class= "Sign_Form">
  
  <%= form_tag(:action => 'login_attempt') do %>
    <p>Username:</br> <%= text_field_tag(:name) %></p> 
    <p>Password:</br> <%= password_field_tag :login_password %></p> 
    <%= submit_tag("Log In") %>
  <% end %>
</div>

<%= button_to "Sign Up", 'sessions#home', method: :get%>

<br>

<%= button_to "Homepage", home_path, method: :get%>

